                <option value="5">Country</option>
            </select> --}}
        </div>
    <!-- sign-up fields end -->
                                            
    <!-- other options start -->
        <div class="options">
            <button id="btnSignUp" class="btn-dark-mode my-8" type="submit">Create Account</button>
        </div>
    <!-- other options end -->
</form>

