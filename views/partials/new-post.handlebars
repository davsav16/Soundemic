<form id="formPost" class="form post py-6 text-center">
    <h2>New Post</h2>
    <!-- sign-up fields start -->
        <div class="fields">
        <!-- artist field -->
            <div class="container-artist">
                <input id="post-artist" class="input" type="text" name="artist" placeholder="Artist">
            </div>
        <!-- title field -->
            <div class="container-title">
                <input id="post-title" class="input" type="text" name="title" placeholder="Title">
            </div>
        <!-- music genre field -->
            <div class="container-genre" class="music-genre">
                <input id="post-genre" class="input" type="text" name="genre" placeholder="Genre">
            </div>
        </div>
    <!-- sign-up fields end -->
                                            
    <!-- other options start -->
        <div class="options">
            <button id="btnNewPost" class="btn-new-post py-2" type="submit">Create Post</button>
        </div>
    <!-- other options end -->
</form>