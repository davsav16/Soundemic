<form id="formSignIn"class=" login-form container text-center py-11 relative">
    <!-- sign in fields start -->
        <div class="fields">
        <!-- email field -->
            <div class="container-email my-4">
                <input id="email-login" class="input shadow-inner shadow-lg" type="email" name="email" placeholder="Email/Username" required>
            </div>
        <!-- password field -->
            <div class="container-password">
                <input id="password-login" class="input shadow-inner mb-6" type="password" name="password" placeholder="Password" required>
            </div>
        </div>
    <!-- sign in fields end -->
                        
    <!-- options start -->
        <div class="options">
            <!-- sign in button -->
            <div>
                <button id="btnSignIn" class="btn-dark-mode my-6" type="submit">Welcome Back</button>
            </div>
            <label class="absolute bottom-0 left-20">
                <input type="checkbox" checked="checked" name="remember"> Remember me
            </label>
            <span class="psw absolute bottom-0 right-20"><a href="#">Forgot Password</a></span>
        </div>
    <!-- options end -->
</form>

<form class="signup-form container py-11">
    <!-- sign-up fields start -->
        <div class="fields">
        <!-- first-name field -->
            <div class="container-first-name">
                <input class="input" type="text" id="first-name-signup" placeholder="First Name">
            </div>
        <!-- last-name field -->
            <div class="container-last-name">
                <input class="input" type="text" id="last-name-signup" placeholder="Last Name">
            </div>
        <!-- bio field -->
            <div class="container-bio">
                <input class="input" type="text" id="bio-signup" placeholder="Bio">
            </div>
        <!-- email field -->
            <div class="container-email">
                <input class="input" type="email" id="email-signup" placeholder="Email" required>

            </div>
        <!-- password field -->
            <div class="container-password">
                <input class="input mb-6" id="password-signup" type="password" name="password" placeholder="Password" required>
            </div>
        <!-- music genre field -->
            <div class="container-genre">
                <input class="input" type="text" id="genre-signup" placeholder="Favorite Genre" required>
            </div>
        </div>
    <!-- sign-up fields end -->
                                            
    <!-- other options start -->
        <div class="options">
            <button id="btnSignUp" class="btn-dark-mode my-8" type="submit">Create Account</button>
        </div>
    <!-- other options end -->
</form>